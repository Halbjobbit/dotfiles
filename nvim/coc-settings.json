{
	"languageserver": {
		"rust": {
			"command": "rust-analyzer",
			"filetypes": [
				"rust"
			],
			"rootPatterns": [
				"Cargo.toml"
			]
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			]
		},
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": [
				"--lsp"
			],
			"rootPatterns": [
				"*.cabal",
				"stack.yaml",
				"cabal.project",
				"package.yaml",
				"hie.yaml"
			],
			"filetypes": [
				"haskell",
				"lhaskell",
				"lhs",
				"hs"
			]
		}
	}
}
